<div class="items-sell-contents">
  <header class="items-sell-header">
   <%= link_to image_tag("logo-gray.png", class:"second-logo"), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">Item Information</h2>
    <%= form_with(model: @eng_item, local: true) do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# 商品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        Photo
      </div>
      <div class="click-upload">
        <p>
          Please click the button below to upload photo
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /商品画像 %>
    
    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        Title
      </div>
      <%= f.text_area :item_name, class:"items-text", id:"item-name", placeholder:"Within 40 characters", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          Description
        </div>
        <%= f.text_area :description, class:"items-text", id:"item-info", placeholder:"Within 1000 characters" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>

    <%# 商品の詳細 %>
    <div class="items-detail">
      <div class="weight-bold-text">Details</div>
      <div class="form">
        <div class="weight-bold-text">
          Category
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          Condition
        </div>
        <%= f.collection_select(:condition_id, Condition.all, :id, :name, {}, {class:"select-box", id:"item-condition"}) %>
        <div class="weight-bold-text">
          Location
        </div>
        <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"select-box", id:"item-area"}) %>
      </div>
    </div>
    <%# /商品の詳細 %>

    <%# 販売価格 %>
    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span>Price<br>(If the item is free, please input 0)</span>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>Yen</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"100" %>
        </div>
        </span>
      </div>
    </div>
    <%# /販売価格 %>

    <%# 注意書き %>
    <div class="caution">
      <p class="sentence">
        Please read the
        <a href="#">forbidden item list</a>
        &
        <a href="#">terms of service</a>
        before posting your item
      </p>
    </div>
    <%# /注意書き %>

    <%# 下部ボタン %>
    <div class="post-btn-contents">
      <%= f.submit "Post", class:"post-btn" %>
      <%=link_to "Back", root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>
