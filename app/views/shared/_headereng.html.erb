<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("logo.png", class:"edogawa-exchange-icon"), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='SEARCH'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><% link_to 'カテゴリー', "#", class: "category-list" %></li>
      <li><% link_to 'ブランド', "#", class: "brand-list" %></li>
    </ul>
    <ul class='lists-right'>
    <% if user_signed_in? %>
      <li><%= link_to 'JPN', "#", class: "jp-page" %></li> 
      <li><%= link_to 'nickname', "#", class: "user-nickname" %></li> 
      <li><%= link_to 'Log Out', "#", method: :delete, class: "logout" %></li> 
    <% else %>   
      <li><%= link_to 'JPN', root_path, class: "jp-page" %></li> 
      <li><%= link_to 'Log In', "#", class: "login" %></li>
      <li><%= link_to 'Register', "#", class: "sign-up" %></li>
    <% end %>
    </ul>
  </div>
</header>